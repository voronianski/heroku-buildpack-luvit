#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

LUVIT_VERSION="0.8.2"

BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR

LUVIT_URL="https://github.com/voronianski/luvit-releases/raw/master/$LUVIT_VERSION/ubuntu/luvit"
echo "-----> Fetching Luvit version $LUVIT_VERSION"
echo "-----> From url $LUVIT_URL"

curl --silent -O --max-time 60 --location "$LUVIT_URL"
# tar xvf luvit-$LUVIT_VERSION.tar.gz
# cd luvit-$LUVIT_VERSION
# make
# make install

#chmod +x luvit

mkdir -p bin
mv luvit bin/luvit
